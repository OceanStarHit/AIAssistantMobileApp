{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "tests": ["test/*"],
      "@components/*": ["src/components/*"]
    },
    "strict": true,
    "jsx": "react-native",
    "module": "CommonJS",
    "lib": [
      "ESNext",
      "DOM"
    ]
  },
  "exclude": ["node_modules"]
}